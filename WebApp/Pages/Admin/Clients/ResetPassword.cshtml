@page
@model WebApp.Pages.Admin.Clients.ResetPasswordModel

@{
    ViewData["Title"] = "Reset Password";
    Layout = "_LayoutAdmin";
}

<h1>Edit</h1>

<h4>Client</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Client.ClientId" />
            <div class="form-group">
                <label asp-for="Client.Password" class="control-label"></label>
                <input asp-for="Client.Password" class="form-control" type="password"/>
                <span asp-validation-for="Client.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
