@page
@model WebApp.Pages.Admin.Cards.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdmin";
}

<h1>Cards</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<div>
    <form method="post">
        <p>Sort by active:</p>
        <input asp-for="SortActive" type="checkbox" asp-action="index" />
        <input type="submit" value="Sort" />
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cards[0].CardId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cards[0].ClientId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cards[0].isActive)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Cards) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CardId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isActive)
            </td>
            <td>
                @if(item.isActive)
                {
                    <a asp-page="./Deactivate" asp-route-id="@item.CardId">Deactivate</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
<p>To <a href="https://localhost:7054/Admin/AdminInterface">Admin page</a>.</p>
