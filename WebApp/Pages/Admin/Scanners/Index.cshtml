@page
@model WebApp.Pages.Admin.Scanners.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdmin";
}

<h1>Scanners</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Scanners[0].ScannerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scanners[0].ScannerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scanners[0].isActive)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Scanners)
        {
        <tr>
            <td>
                 @Html.DisplayFor(modelItem => item.ScannerId)
            </td>
            <td>
                 @Html.DisplayFor(modelItem => item.ScannerName)
            </td>
            <td>
                 @Html.DisplayFor(modelItem => item.isActive)
            </td>
            <td>
                 <a asp-page="./Edit" asp-route-id="@item.ScannerId">Edit</a> |
                 <a asp-page="./Details" asp-route-id="@item.ScannerId">Details</a> |
                 <a asp-page="./Delete" asp-route-id="@item.ScannerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>To <a asp-page="/Admin/AdminInterface">Welcome page</a>.</p>
