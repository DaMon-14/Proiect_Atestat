@page
@model WebApp.Pages.Login.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<h4>Available only to admins</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="User.ClientId" class="control-label"></label>
                <input asp-for="User.ClientId" class="form-control" />
                <span asp-validation-for="User.ClientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Password" class="control-label" type="password"></label>
                <input asp-for="User.Password" class="form-control" type="password"/>
                <span asp-validation-for="User.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" asp-page-handler="Login"/>
                <input type="submit" value="Register" class="btn btn-secondary" asp-page-handler="Register" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
