@page
@model WebApp.Pages.Shared.Profile.ChangePasswordModel

@{
    ViewData["Title"] = "Change Password";
    if (HttpContext.Session.TryGetValue("Admin", out _) == true)
    {
        Layout = "_LayoutAdmin";
    }
    else if (HttpContext.Session.TryGetValue("Client", out _) == true)
    {
        Layout = "_LayoutClient";
    }
    else
    {
        Layout = "_Layout";
    }
}

<h1>Edit</h1>

<h4>Client</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PasswordChange.ClientId" />
            <div class="form-group">
                <label asp-for="PasswordChange.CurrentPassword" class="control-label"></label>
                <input asp-for="PasswordChange.CurrentPassword" class="form-control" type="password"/>
                <span asp-validation-for="PasswordChange.CurrentPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordChange.NewPassword" class="control-label"></label>
                <input asp-for="PasswordChange.NewPassword" class="form-control" type="password"/>
                <span asp-validation-for="PasswordChange.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordChange.ConfirmPassword" class="control-label"></label>
                <input asp-for="PasswordChange.ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="PasswordChange.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Profile" asp-route-id="@Model.PasswordChange.ClientId">Back to Profile</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
